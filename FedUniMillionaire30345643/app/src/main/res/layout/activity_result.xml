<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Results"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="RESULTS"
        android:textColor="#000"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="You have won a grant price of: "
        android:textColor="#000"
        android:textSize="24dp"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView

        android:id="@+id/overal_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#DC143C"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/messaj" />

    <ImageView
        android:id="@+id/dollar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@id/messaj"
        app:layout_constraintEnd_toEndOf="@id/overal_results"
        android:padding="2dp"
        android:src="@drawable/ic_dollar"
        />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#DC143C"
        android:text="have a greate day Mr: "
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overal_results" />

</androidx.constraintlayout.widget.ConstraintLayout>